<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@android:color/black"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_layout"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"/>

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd"
        android:src="@drawable/splash_character"/>

    <ImageView
        android:id="@+id/black_web_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_layout"
        android:scaleType="fitXY"
        android:src="@drawable/black_web"/>

    <ImageView
        android:id="@+id/splash_spider_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/spider_patch"
        app:layout_heightPercent="42%"/>

    <ImageView
        android:id="@+id/splash_spider_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/splash_spider_center"
        android:scaleType="fitXY"
        android:src="@drawable/spider_patch"
        app:layout_heightPercent="47%"/>

    <ImageView
        android:id="@+id/splash_spider_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/splash_spider_center"
        android:scaleType="fitXY"
        android:src="@drawable/spider_patch"
        app:layout_heightPercent="47%"/>

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_spider_right"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/spider_attack_logo"/>

    <View
        android:id="@+id/middle_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@id/logo_view"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <ImageView
        android:id="@+id/help_image"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_view"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/middle_view"
        android:adjustViewBounds="true"
        android:background="@drawable/background_round_black_translucent"
        android:padding="15dp"
        android:scaleType="fitStart"
        android:src="@drawable/help"/>

    <ImageView
        android:id="@+id/play_image"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_view"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/middle_view"
        android:adjustViewBounds="true"
        android:background="@drawable/background_round_black_translucent"
        android:padding="15dp"
        android:scaleType="fitStart"
        android:src="@drawable/play"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:scaleType="center"
        android:src="@drawable/grass"/>

</android.support.percent.PercentRelativeLayout>